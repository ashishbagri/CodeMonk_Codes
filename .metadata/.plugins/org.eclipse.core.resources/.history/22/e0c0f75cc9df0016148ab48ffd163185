package core_concepts;

public class UnionFind {

	private int[] nodes;
	
	public UnionFind(int n) {
		nodes = new int[n];
		for(int i=0;i<n;i++){
			nodes[i]=i;
		}
	}
	
	public void union(int p,int q){
		
		int pId = nodes[p];
		int qId = nodes[q];
		
		for(int i=0;i<nodes.length;i++){
			if(nodes[i]==pId){
				nodes[i]=qId;
			}
		}
	}
	
	public boolean connected(int p,int q){
		return nodes[p] == nodes[q];
	}
	
}
