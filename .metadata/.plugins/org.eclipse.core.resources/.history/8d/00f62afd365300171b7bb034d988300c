import java.util.Scanner;


public class DexterplayswithGP {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-->0){
			boolean[] seen = new boolean[1000000000];
			long r = sc.nextInt();
			long s = sc.nextInt();
			long p =sc.nextLong();
			int ans = -1;
			long n =1+r;
			long m = 1;
			/*SU'=M = (1+r)(1+r2+r4+r5..r2[p-1]/2*/
			for(int i=2;i<p;i+=2){
				m = m+(int)Math.pow(r%p, i)%p;
				if(s%p==(m*n)%p){
					ans=i+1;
					break;
				}
			}
			System.out.println(ans);
		}
	}
}
