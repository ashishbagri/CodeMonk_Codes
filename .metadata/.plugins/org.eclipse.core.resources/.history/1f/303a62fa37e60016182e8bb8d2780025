import java.io.IOException;
import java.util.Arrays;
import java.util.Scanner;

public class NearVsMello {
	public static void main(String[] args) {
		Scanner sc =  new Scanner(System.in);
		try {
			int n = sc.nextInt();
			int[] h = new int[n];
			for(int i=0;i<n;i++){
				h[i] = inputStreamReader.read();
			}
			System.out.println(new Solver().solve(n,h));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}

class Solver {

	public int solve(int n, int[] h) {
		int sum = 0;
		Arrays.sort(h);
		for(int i =1;i<n;i++){
			sum+=h[1]-h[i];
		}
		return sum;
	}

}
